<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Customer_app.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="kitbox.png"
                HeightRequest="250"
                Aspect="AspectFit"
                SemanticProperties.Description="The kitbox"
                HorizontalOptions="Center" />

            <Label
                Text="WELCOME TO KITBOX COMPANY"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="52"
                HorizontalOptions="Center" />

            <Button
                x:Name="StartOrdering"
                Text="Start ordering"
                Clicked="Orderbuttonclicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
